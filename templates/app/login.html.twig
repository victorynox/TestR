<div>
    <h1>Sign In</h1>
    {% if error %}
    <div>
        <h2>
            {{ error }}
        </h2>
    </div>
    {% endif %}
    <form method="post" action={{ path() }}>
        <dl class="zend_form">
            <label>
                User name
                <input type="text" name="login"/>
            </label>
            <label>
                Password
                <input type="password" name="password"/>
            </label>
            <label>
                <input type="submit" name="submit"/>
            </label>
        </dl>
    </form>
</div>
