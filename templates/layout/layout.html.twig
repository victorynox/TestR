<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Admin{% endblock %}</title>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    {% block stylesheets %}
    {% endblock stylesheets %}
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap-theme.css">
    <link rel="stylesheet" href="/bootstrap/css/dashboard.css">


    <script src="/bootstrap/js/bootstrap.js"></script>

    {% block javascripts %}
    {% endblock javascripts %}
</head>
<body class="claro">
{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            {#TODO Название#}
            <a class="navbar-brand"
               href="#">{% block name %}Админ панель{% endblock name %}</a>
        </div>
        <div class="navbar-collapse collapse">

            {#TODO меню#}
            <ul class="nav navbar-nav navbar-right">
                {#TODO Написать страницу помощи#}
               {# <li><a href="#">Help</a></li>#}
                {% block access %}
                <li><a href="{{ path('logout') }}">Logout</a></li>
                {% endblock access %}
            </ul>

            {#TODO форма поиска#}
            {#<form class="navbar-form navbar-right">
                <input class="form-control" placeholder="Search..." type="text">
            </form>#}

        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">

        {% block informMessages %}

        {% endblock informMessages %}

        {% block modalVindow %}{% endblock modalVindow %}
        {#TODO боковое меню #}
        {% block leftMenu %}
        <div class="col-sm-3 col-md-2 sidebar">

            {#TODO основное меню контроллера#}
            <ul class="nav nav-sidebar">
                {% block mainSideMenu %}

                {% endblock mainSideMenu %}
            </ul>

        </div>
        {% endblock leftMenu %}

        {#TODO центральный блок#}
        {% block centerRightBlock %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            {% block mainContent %}

                <h1 id="reportName" class="page-header">{% block centralBlockName %}  {% endblock centralBlockName %}</h1>

                {#TODO иконки#}
                {% block contentHeader %}

                {% endblock contentHeader %}

                {#TODO таблица#}
                <h2 class="sub-header">{% block contentBodyName %}  {% endblock contentBodyName %}</h2>
                {% block contentBody %}

                {% endblock contentBody %}

            {% endblock mainContent %}
        </div>
        {% endblock centerRightBlock %}
    </div>
</div>
{% endblock body %}
</body>
</html>